
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

<section>
    <div>
        <form action="~/Parametros/Edit" method="post">
            <div>
                <label for="id">Id</label>
                <input type="text" id="id" name="id" value="@ViewBag.Email.Id" readonly="readonly" />
            </div>
            <div>
                <label for="tipo">Tipo</label>
                <input type="text" id="tipo" name="tipo" value="@ViewBag.Email.Tipo" required />
            </div>
            <div>
                <label for="valor">Valor</label>
                <input type="text" id="valor" name="valor" value="@ViewBag.Email.Valor" required />
            </div>
            <div>
                <input type="submit" class="btn btn-success" value="Salvar" />
                <a href="~/Parametros/Index" class="btn btn-default">Voltar</a>
            </div>

        </form>
    </div>
</section>